-- LOAD OLLY UI LIBRARY
local UI = loadstring(game:HttpGet("https://raw.githubusercontent.com/aldyjrz/katanyaStealer/refs/heads/main/ui/olymui"))()

-- CREATE WINDOW
local win = UI:Window("Olympus Hub", {
    KeySystem = true,          -- ON/OFF Key System
    Key = "OLLY-123",          -- Ganti ini!
    SaveConfig = true,         -- Simpan setting
    ConfigFolder = "Olympus"   -- Folder penyimpanan file
})

---------------------------------------------------------
-- MAIN TAB
---------------------------------------------------------
local main = win:Tab("Main")

main:Toggle({
    Title = "Auto Farm",
    Default = false,
    Callback = function(state)
        win:Notify({ Content = "Auto Farm = " .. tostring(state), Duration = 2 })
    end
})

local weapDD = main:Dropdown({
    Title = "Select Weapon",
    Values = {"Sword","Arrow","Scythe"},
    Callback = function(v)
        win:Notify({ Content = "Weapon Selected: " .. v, Duration = 2 })
    end
})

main:Button({
    Title = "Refresh Weapon List",
    Callback = function()
        weapDD:SetValues({"Sword","Gun","Katana","Axe"})
        win:Notify({ Content = "Weapon List Updated!", Duration = 2 })
    end
})

main:Input({
    Title = "Attack Delay",
    Placeholder = "0.2",
    Callback = function(v)
        win:Notify({ Content = "Delay set to " .. v })
    end
})

---------------------------------------------------------
-- TOTEM TAB (MULTI DROPDOWN)
---------------------------------------------------------
local totem = win:Tab("Totem")

local multi = totem:MultiDropdown({
    Title = "Totem List",
    Values = {"Fire","Wind","Ice","Nature","Light"},
    Callback = function(tbl)
        print("Selected Totems:")
        for name, enabled in pairs(tbl) do
            print(name, enabled)
        end
    end
})

totem:Button({
    Title = "Spawn Selected Totem",
    Callback = function()
        win:Notify({ Content = "Totem Spawned!", Duration = 2 })
    end
})

---------------------------------------------------------
-- MISC TAB
---------------------------------------------------------
local misc = win:Tab("Misc")

misc:Button({
    Title = "Toggle Theme",
    Callback = function()
        win:ToggleTheme()
        win:Notify({ Content = "Theme changed!" })
    end
})

misc:Toggle({
    Title = "Auto Collect Drops",
    Default = true,
    Callback = function(v)
        win:Notify({ Content = "Auto Collect = " .. tostring(v) })
    end
})

misc:Input({
    Title = "Webhook URL",
    Placeholder = "https://discord...",
    Callback = function(v)
        win:Notify({ Content = "Webhook saved!" })
    end
})

---------------------------------------------------------
-- DEMO TOAST
---------------------------------------------------------
task.delay(1, function()
    win:Notify({ Content = "Olympus UI Loaded!", Duration = 3 })
end)
